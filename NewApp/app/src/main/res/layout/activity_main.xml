<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inloggning2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/erormessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ange användare namn" />


    <EditText
        android:id="@+id/userName"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:hint="Användare "
        android:inputType="text" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angelösenord" />

    <EditText
        android:id="@+id/password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Lösenord"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/inloggning"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="loggaInClick"
        android:text="Logga in" />

    <Button
        android:id="@+id/reg"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:onClick="loggaInClick"
        android:text="Registrera" />


</LinearLayout>